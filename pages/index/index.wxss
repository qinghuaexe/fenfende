/**index.wxss**/

.home-wrapper {
    width: 100%;
    overflow: hidden;
}

.head-img {
    width: 92%;
    height: 360rpx;
    border-radius: 16rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    overflow: hidden;
}

.home-swiper-img {
    width: 100%;
    height: 360rpx;
}

.swiper-image {
    width: 100%;
    height: 360rpx;
}

.home-content {
    padding-top: 40rpx;
    width: 100%;
    background: #ffffff;
    box-shadow: 1px 0px 10px 0px rgba(223, 223, 223, 0.5);
}

.home-function {
    width: 92%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.home-function-item {
    width: 20%;
    text-align: center;
}

.item-img {
    width: 90rpx;
    height: 90rpx;
}

.item-name {
    margin-top: 26rpx;
    height: 40rpx;
    opacity: 1;
    font-size: 14px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #333333;
    line-height: 40rpx;
}

.home-line-1 {
    margin: 34rpx auto;
    height: 1px;
    opacity: 1;
    background: #f5f5f5;
}

.home-line {
    width: 92%;
    margin: 34rpx auto;
    height: 1px;
    opacity: 1;
    background: #f5f5f5;
}

.home-swiper {
    width: 100%;
    height: 100rpx;
}

.home-swiper>swiper {
    width: 92%;
    margin: 0 auto;
    height: 100rpx;
}

.swiper-wrapper {
    width: 100%;
    height: 100rpx;
}

.swiper-item {
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.swiper-man-avator {
    display: block;
    margin-right: 10rpx;
    width: 40rpx;
    height: 40rpx;
}

.swiper-man-name {
    height: 40rpx;
    line-height: 40rpx;
}

.swiper-man-info {
    display: flex;
    align-items: center;
    height: 34rpx;
    opacity: 1;
    font-size: 12px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #666666;
    line-height: 34rpx;
}

.swiper-man-text {
    height: 34rpx;
    opacity: 1;
    font-size: 12px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #666666;
    line-height: 34rpx;
}

.home-answer {
    margin-top: 80rpx;
}

.head-answer-1,
.head-answer-2 {
    background: #ffffff;
    width: 364rpx;
    height: 98rpx;
    margin: 0 auto;
    line-height: 98rpx;
    border-radius: 64rpx;
    font-size: 16px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    display: flex;
    align-items: center;
    justify-content: center;
}

.head-answer-1 {
    background: #33b232;
    color: #ffffff;
}

.head-answer-2 {
    color: #33b232;
    height: 78rpx;
    margin-top: 10rpx;
}

.answer-icon {
    display: block;
    margin-right: 15rpx;
    width: 40rpx;
    height: 40rpx;
}

.g-arrow {
    display: block;
    margin-left: 42rpx;
    width: 14rpx;
    height: 26rpx;
}

.text {
    padding-left: 15rpx;
}