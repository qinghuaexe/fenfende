.record-wrapper {
  width: 100%;
  border-top: 1px solid #f5f5f5;
}

.record-list {
  box-sizing: border-box;
  width: 92%;
  height: 144rpx;
  margin: 10rpx auto;
  padding: 25rpx 0;
  background: #ffffff;
  box-shadow: 0px 1px 0px 0px #f5f5f5;
}

.record-item-1,
.record-item-2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.record-item-2 {
  margin-top: 10rpx;
}

.record-used {
  height: 50rpx;
  opacity: 1;
  font-size: 18px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 50rpx;
}

.record-state {
  height: 40rpx;
  opacity: 1;
  font-size: 14px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #33b232;
  line-height: 40rpx;
}

.record-balance {
  height: 34rpx;
  opacity: 1;
  font-size: 12px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 34rpx;
}

.record-time {
  height: 34rpx;
  opacity: 1;
  font-size: 12px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  line-height: 34rpx;
}
