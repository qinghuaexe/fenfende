.withdraw-wrapper {
  width: 100%;
  height: 280rpx;
  background: #f5f5f5;
  overflow: hidden;
}

.withdraw {
  width: 92%;
  height: 212rpx;
  margin: 34rpx auto;
  position: relative;
}

.withdraw-bg {
  width: 100%;
  height: 212rpx;
}

.withdraw-card-wrapper {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx;
  position: absolute;
  top: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.withdraw-card-title {
  opacity: 1;
  font-size: 14px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #b78418;
}

.withdraw-card-number {
  height: 80rpx;
  opacity: 1;
  font-size: 28px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #b78418;
  line-height: 80rpx;
}

.withdraw-record {
  width: 200rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 14px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
  background: #b78418;
  border-radius: 34rpx;
}

.withdraw-used {
  width: 92%;
  height: 220rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.withdraw-cash {
  width: 50%;
  text-align: center;
}

.withdraw-number {
  height: 80rpx;
  opacity: 1;
  font-size: 28px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #ebb65a;
  line-height: 80rpx;
}

.withdraw-des {
  height: 40rpx;
  opacity: 1;
  font-size: 14px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
}

.withdraw-input-wrapper {
  width: 92%;
  margin: 0 auto;
  border-bottom: 1px solid #cccccc;
}

.withdraw-input {
  padding-left: 10rpx;
  padding-bottom: 20rpx;
  height: 40rpx;
  opacity: 1;
  font-size: 14px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #999999;
}

.withdraw-submit {
  width: 470rpx;
  height: 100rpx;
  margin: 150rpx auto;
  background: #f0ca88;
  border-radius: 48rpx;
  opacity: 1;
  font-size: 21px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
  line-height: 100rpx;
}
