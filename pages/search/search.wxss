.search-content-wrapper {
    width: 100%;
    height: 100vh;
    position: relative;
}

.search-detail {
    width: 92%;
    margin: 0 auto;
    margin-top: 80rpx;
    font-size: 16px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: left;
    color: #666666;
}

.text-g {
    font-size: 24px;
    color: #33b232;
}

.search-amount {
    width: 92%;
    margin: 0 auto;
    margin-top: 22rpx;
    font-size: 16px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: left;
    color: #666666;
    display: flex;
    align-items: center;
}

.search-amount-type {
    margin-left: 20rpx;
    width: 140rpx;
    height: 40rpx;
    opacity: 1;
    background: rgba(51, 178, 50, 0.24);
    border-radius: 20rpx;
    font-size: 12px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: center;
    color: #33b232;
    line-height: 40rpx;
}

.search-type-wrapper {
    width: 92%;
    margin: 0 auto;
    margin-top: 68rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.search-input {
    box-sizing: border-box;
    width: 552rpx;
    height: 80rpx;
    opacity: 1;
    background: #f5f5f5;
    padding-left: 20rpx;
    border-radius: 12rpx;
    opacity: 1;
    font-size: 16px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: left;
    color: #999999;
    line-height: 80rpx;
}

.search-btn {
    width: 120rpx;
    height: 80rpx;
    opacity: 1;
    background: #f5f5f5;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-type-icon {
    display: block;
    margin-right: 10rpx;
    width: 40rpx;
    height: 40rpx;
}

.arrow-down {
    width: 16rpx;
    height: 16rpx;
}

.search-tips-wrapper {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    height: 70rpx;
    opacity: 1;
    background: #cfedcf;
}

.search-tips {
    width: 92%;
    height: 70rpx;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 16px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #666666;
}

.search-tips-close {
    width: 30rpx;
    height: 30rpx;
}


/* 选择搜索方式 */

.search-select-mask {
    position: fixed;
    width: 100vw;
    height: 100vh;
    top: 0;
    bottom: 0;
    z-index: 999;
    background: rgba(0, 0, 0, 0.25);
}

.search-select-tabs {
    box-sizing: border-box;
    padding-top: 60rpx;
    position: fixed;
    bottom: 0;
    z-index: 10000;
    width: 100%;
    height: 340rpx;
    opacity: 1;
    background: #ffffff;
    display: flex;
    justify-content: space-around;
}

.select-tabs {
    background: #ffffff;
    width: 33.33%;
    height: 135rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.select-name {
    opacity: 1;
    font-size: 16px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #33b232;
}

.select-image-2 {
    display: block;
    width: 68rpx;
    height: 68rpx;
}

.select-image-1 {
    width: 80rpx;
    height: 80rpx;
}

.select-image-best {
    display: block;
    width: 48rpx;
    height: 30rpx;
}

.select-image-3 {
    width: 72rpx;
    height: 72rpx;
}


/* 文字搜索框 */

.search-text {
    margin-top: 40rpx;
}

.message {
    width: 92%;
    margin: 0 auto;
    box-sizing: border-box;
    border-radius: 16rpx;
    background: #EFEFEF;
    padding: 24rpx 24rpx;
    opacity: 1;
    font-size: 28rpx;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #666666;
}

.search-text-tips {
    width: 92%;
    margin: 16rpx auto;
    font-size: 14px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: left;
    color: #999999;
}

.search-text-tips>label {
    color: #EB0E0E;
}

.search-text-btn {
    width: 100%;
    margin-top: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.search-text-confrim {
    width: 216rpx;
    height: 92rpx;
    line-height: 92rpx;
    background: #33b232;
    border-radius: 40rpx;
    font-size: 16px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: center;
    color: #ffffff;
}


/* 题目列表 */

.question-no-img {
    display: block;
    width: 404rpx;
    height: 274rpx;
    margin: 0 auto;
    margin-top: 150rpx;
}

.question-no-tips {
    width: 100%;
    text-align: center;
    font-size: 14px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #999999;
}

.question-list-wrapper {
    width: 100%;
    overflow: auto;
}

.question-list {
    margin-top: 15rpx;
    background: #f5f5f5;
    overflow: auto;
    padding-bottom: 70rpx;
}

.question-item {
    box-sizing: border-box;
    width: 92%;
    margin: 0 auto;
    margin-top: 30rpx;
    border-radius: 16rpx;
    padding: 30rpx 30rpx;
    background: #ffffff;
}

.question-item-title {
    font-size: 16px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #333333;
    line-height: 56rpx;
}

.question-type-name {
    display: inline-block;
    text-align: center;
    border-radius: 10rpx;
    width: 112rpx;
    height: 44rpx;
    font-size: 12px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    color: #ffffff;
    line-height: 44rpx;
}

.question-type-name.single {
    background: #33B232;
}

.question-type-name.multiple {
    background: #E2AD50;
}

.question-type-name.judgment {
    background: #58AFF0;
}

.question-item-img {
    margin: 20rpx auto;
    width: 616rpx;
    height: 302rpx;
}

.question-img {
    width: 616rpx;
    height: 302rpx;
}

.answer-select {
    margin: 4px 0;
    font-size: 16px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: left;
    color: #666666;
    line-height: 44rpx;
}

.question-answer-wrapper {
    margin-top: 30rpx;
    border-left: 3px solid #33B232;
    padding-left: 20rpx;
    font-size: 18px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: left;
    color: #33b232;
    line-height: 50rpx;
}

.question-answer-wrapper>label {
    padding-left: 15rpx;
}

.question-btn-wrapper {
    margin: 70rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.question-btn {
    width: 216rpx;
    height: 80rpx;
    opacity: 1;
    background: #33b232;
    border-radius: 40rpx;
    font-size: 16px;
    font-family: PingFangSC, PingFangSC-Regular;
    font-weight: 400;
    text-align: center;
    color: #ffffff;
    line-height: 80rpx;
    letter-spacing: 1px;
}